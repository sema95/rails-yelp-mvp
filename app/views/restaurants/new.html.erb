<%= simple_form_for [@restaurant] do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, as: :select, collection: Restaurant::CATEGORY, prompt: 'Select Category', label: false %>

  <%= f.submit "Add restaurant", class: "btn btn-primary" %>
<% end %>
