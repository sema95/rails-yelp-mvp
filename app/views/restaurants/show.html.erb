<h2><%= @restaurant.name %></h2>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %></p>

<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= "#{review.content}    -#{review.rating} stars" %></li>
  <% end %>
</ul>

<p><%= link_to 'Show all restaurants', root_path %></p>
<p><%= link_to 'Add a new Restaurant', new_restaurant_path %></p>
<p><%= link_to 'Add a Review', new_restaurant_review_path(@restaurant.id) %></p>

